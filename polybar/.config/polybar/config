[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-muted =  muted
label-muted-foreground = ${colors.surface2}
label-volume-underline = ${colors.pink}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true
enable-scroll = false

label-focused = %index%
label-focused-foreground = ${colors.text} 
label-focused-background = ${colors.crust}
label-focused-underline = ${colors.green}
label-focused-padding = 1

label-visible = %index%
label-visible-underline = ${colors.crust}
label-visible-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-underline = ${colors.red}
label-urgent-padding = 1

[module/docker]
type = custom/script
exec = $HOME/.config/scripts/docker_count.sh
format-prefix = " "
; 
label-underline = #9aedfe
label-padding = 1

[module/kubernetes]
type = custom/script
exec = $HOME/.config/scripts/k8s_ctx.sh
format = %{A3:$HOME/.config/scripts/k8s_ctx.sh gui:}<label>%{A}
format-prefix = " "
label-underline = #326de6
label-padding = 1

[module/cpu]
type = internal/cpu
interval = 0.5
format-prefix = " "
format-prefix-foreground = ${colors.subtext2}
label-underline = ${colors.red}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 0.5
format-prefix = " "
format-prefix-foreground = ${colors.subtext2}
label-underline = ${colors.teal}
label = %percentage_used%% (%used%)

[module/temperature]
type = internal/temperature
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon8/temp1_input
format-prefix = " "
label-underline = #f1fa8c

[module/privacyguard]
type = custom/ipc
hook-0 = $HOME/.config/scripts/privacyguard.sh
initial = 1

[module/date]
type = internal/date
interval = 5

date = "%a %d"
date-alt = %a %b %d

time = %H:%M
time-alt = %H:%M

format-prefix =
format-prefix-foreground = ${colors.subtext2}
format-underline = ${colors.lavender}

label = %date% %time%

[module/battery]
type = internal/battery
time-format = %H:%M 
battery = BAT0
adapter = AC
full-at = 98

format-charging = <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

format-full = <label-full>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-foreground = ${colors.subtext2}

label-charging = ⚡ %percentage%% (%time% @ %consumption%w)
label-discharging = %percentage%% (%time% @ %consumption%w)
label-full = ""


[module/wired-network]
type = internal/network
interface = enp0s25
label-connected = %local_ip% %upspeed% - %downspeed%

[module/wireless-network]
type = internal/network
interface = wlan0
label-connected = %essid%(%signal%) %upspeed% - %downspeed%

[module/backlight]
type = internal/backlight
card = intel_backlight
use-actual-brightness = true
enable-scroll = true

[module/fs]
type = internal/fs
mount-0 = /home
label-mounted = %free%

